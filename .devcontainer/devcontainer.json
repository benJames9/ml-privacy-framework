{
  "name": "SEGP Container",
  "image": "warmtea137/privacy-ml-segp:latest",
  "initializeCommand": "docker pull warmtea137/privacy-ml-segp:latest",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/zsh",
        "terminal.integrated.env.linux": {
          "CONDA_DEFAULT_ENV": "privacy-ml-container",
          "PATH": "/opt/conda/envs/privacy-ml-container/bin:/opt/conda/bin:${env:PATH}"
        },
        "python.pythonPath": "/opt/conda/envs/privacy-ml-container/bin/python"
      },
      "extensions": [
        "ms-python.vscode-pylance",
        "ms-python.python",
        "ms-python.debugpy",
        "njqdev.vscode-python-typehint",
        "usernamehw.errorlens",
        "njpwerner.autodocstring",
        "KevinRose.vsc-python-indent",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-vscode.vscode-typescript-next",
        "huizhou.githd"
      ]
    }
  },
  "postCreateCommand": "echo 'source /opt/conda/etc/profile.d/conda.sh && conda activate privacy-ml-container' >> ~/.zshrc"
}